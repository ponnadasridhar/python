class Solution:
    def findPairs(self, nums: List[int], k: int) -> int:
        result=set()
        i=0
        j=1
        n=len(nums)
        nums.sort()
        while j<n:
            if nums[j]-nums[i]==k:
                result.add((nums[i],nums[j]))
                i=i+1
                j=i+1
            elif nums[j]-nums[i]>k:
                i=i+1
                j=j+1
            else:
                j=j+1
        return len(result)
